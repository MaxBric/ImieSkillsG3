{% extends 'ImieSkillsBundle::layout.html.twig' %}

{% block article %}
  <ol class="breadcrumb">
    <li><a href="{{ path('imie_skills_home') }}">Accueil</a></li>
    <li class="active">Liste des écoles</li>
  </ol>
  <h2><span class="glyphicon glyphicon-education"></span> Liste des écoles</h2>
  <hr/>
    <a class="btn btn-primary" href="{{ path('imie_skills_panel') }}" role="button"><span class="glyphicon glyphicon-menu-left"></span> Retour</a>
    <a class="btn btn-primary" href="{{ path('imie_skills_school_add') }}"><span class="glyphicon glyphicon-plus"></span> Ajouter une école</a>
  <hr/>
  <table class="table table-striped">
    <thead>
      <th>Nom</th>
    </thead>
    <tbody>
      {% for schools in school if schools is defined %}
      <tr>
        <td><a href="{{ path('imie_skills_school_detail', {id:schools.id}) }}">{{ schools.schoolName }}</a></td>
        <td><a href="{{ path('imie_skills_school_modify', {id:schools.id}) }}"><span class="glyphicon glyphicon-cog"></span></a></td>
        <td><a href="{{ path('imie_skills_school_delete', {id:schools.id}) }}"><span class="glyphicon glyphicon-trash"></span></a></td>

      </tr>
      {% endfor %}
    </tbody>
  </table>
{% endblock article %}
