{% extends 'ImieSkillsBundle::layout.html.twig' %}

{% block article %}
<ol class="breadcrumb">
  <li><a href="{{ path('imie_skills_home') }}">Accueil</a></li>
  <li><a href="{{ path('imie_skills_notification_index') }}">Liste des notifications</a></li>
  <li class="active">Détails de la notification</li>
</ol>
<h2><span class="glyphicon glyphicon-bell"></span> Détails de la notification</h2>
<hr/>
<a class="btn btn-primary" href="{{ path('imie_skills_notification_index') }}" role="button"><span class="glyphicon glyphicon-menu-left"></span> Retour</a>
<hr/>
{%if for notification in notifications if notifications is defined%}
<table>
  <tr>
    <th class="col-md-2">Titre</th>
    <th class="col-md-6">Description</th>
    <th class="col-md-2">Emetteur</th>
    <th class="col-md-2">Projet concerné</th>
  </tr>
  <tr>
    <td>{{ notification.notificationName }}</td>
    <td>{{ notification.notificationDescription }}</td>
    <td>{{ notification.notificationSender}}</td>
    <td>{{ notification.notificationProject.projectName}}</td>
  </tr>
</table>
{% endif %}
{% endblock article %}
