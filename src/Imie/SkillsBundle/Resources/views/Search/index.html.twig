{% extends 'ImieSkillsBundle::layout.html.twig' %}

{% block article %}
<h2>Recherche</h2>
<hr/>
<form method="post" action="{{ path('imie_skills_search') }}" {{ form_enctype(form) }}>
  {{ form(form) }}
</form>
  {% if search %}
<table class="table table-striped">
  <thead>
    <!-- <td></td> -->
    <td>Name</td>
    <!-- <td>Description</td> -->
  </thead>
  <tbody>
{% for result in search.results %}
<tr>
  <td>{{ result.projectName }}</td>
</tr>
{% endfor %}
  </tbody>
</table>
{% endif %}
{% endblock article %}
