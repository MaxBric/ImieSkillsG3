{% extends 'ImieSkillsBundle::layout.html.twig' %}

{% block article %}
<h2>Login</h2>
{% if error %}
<div>{{ error.message }}</div>
{% endif %}
<form action="{{ path('imie_skills_login_check') }}" method="post">
  <label for="username">Identifiant :</label>
  <input type="text" class="form-control" id="username" name="_username" value="{{ last_username }}" />
  <label for="password">Mot de passe :</label>
  <input type="password" class="form-control" id="password" name="_password" />
  {#
    Si vous voulez contrôler l'URL vers laquelle l'utilisateur est redirigé en cas de succès
    (plus de détails ci-dessous)
    <input type="hidden" name="_target_path" value="/account" />
    #}
    <button type="submit" class="btn btn-default">Login</button>
  </form>
  {% endblock article %}
