{% extends 'ImieSkillsBundle::layout.html.twig' %}

{% block article %}
<h2><span class="glyphicon glyphicon-blackboard"></span> Détails du projet</h2>
<a href="{{ path('imie_skills_project_index') }}"><span class="glyphicon glyphicon-menu-left"> Retour</a>
  <a href="{{ path('imie_skills_project_modify', {id:project.id}) }}"><span class="glyphicon glyphicon-cog"></span> Modifier</a>
  <h3>Nom du projet : {{ project.projectName }}</h3>{% if project.image is not null %}<img src="{{ asset(project.image.webpath) }}" alt="{{ asset(project.image.imageAlt) }}" width="100" height="100">{% endif %}
  <hr/>
  <p>Phase d'avancement : {{ project.state.statut }}</p>
  <p>Progression de la phase en cours : {{ project.projectProgress }} %</p>
  <p>Date de départ estimée : {{ project.projectEstimatedStart|date('d/m/y') }}</p>
  <p>Date de fin estimée : {{ project.projectEstimatedEnd|date('d/m/y') }}</p>
  <p>Date de départ réelle :  {{ project.projectStart|date('d/m/y') }}</p>
  <p>Date de fin réelle : {{ project.projectEnd|date('d/m/y') }}</p>
  <hr/>
  <p>Description : {{ project.projectDescription }}</p>
  <hr/>
  <h4>Compétences demandées :</h4>
  <ul>
    {% for skill in project.skills if project.skills is defined %}
    <li>{{ skill.skillName }}</li>
    {% endfor %}
  </ul>
  <h4>Chef de projet : {% if project.manager is not null %}{{ project.manager.userFullName }}{% else %}A recruter{% endif %}</h4>
  <h4>Équipe :</h4>
  <ul>
    {% if project.users is not null %}
    {% for user in project.users if project.users is defined %}
    <li>{{ user.userFullName }}</li>
    {% endfor %}
    {% else %}à recruter
    {% endif %}
  </ul>
  {% endblock article %}
