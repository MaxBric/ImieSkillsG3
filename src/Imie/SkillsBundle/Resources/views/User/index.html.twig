{% extends 'ImieSkillsBundle::layout.html.twig' %}

{% block article %}
<h2>Liste des utilisateurs</h2>
<a href="{{ path('imie_skills_user_add') }}"><span class="glyphicon glyphicon-plus"></span> Ajouter un utilisateur</a>
<hr/>
<table class="table table-striped">
  <thead>
    <td>Nom</td>
    <td>Adresse</td>
    <td>Mail</td>
    <td>Téléphone</td>
    <td>Anniversaire</td>
    <td>Description</td>
    <td>Compétences</td>
  </thead>
  <tbody>
    {% for user in users if users is defined%}
    <tr>
      <td><a href="{{ path('imie_skills_user_me', {id:user.id})}}">{{ user.userFullName }}</a></td>
      <td>{{ user.userAddress }}</td>
      <td>{{ user.userMail }}</td>
      <td>{{ user.userPhoneNumber }}</td>
      <td>{{ user.userBirthday|date('d/m/Y') }}</td>
      <td>{{ user.userDescription }}</td>
      <td><ul>
        {% for skill in user.skills if user.skills is defined %}
        <li>{{ skill.skillName }}</li>
        {% endfor %}
      </ul></td>
      <td><a href="{{ path('imie_skills_user_modify', {id:user.id}) }}"><span class="glyphicon glyphicon-cog"></span></a></td>
      <td><a href="{{ path('imie_skills_user_delete', {id:user.id}) }}"><span class="glyphicon glyphicon-trash"></span></a></td>
      {% endfor %}
      <hr/>
    </tbody>
  </table>
  {% endblock article %}
